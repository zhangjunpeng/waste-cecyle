<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.dp.electronic_scale.MainActivity" >

  
    <Button
       android:layout_marginTop="20dp"       
        android:id="@+id/open_bt"
         android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="初始化"
       />        
    
    <Button
         android:layout_below="@+id/open_bt"
         android:id="@+id/test_bt"
         android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="打印测试"        
        />

    <Button
        android:id="@+id/set_bt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/test_bt"
        android:text="获取重量" />
      <EditText
          android:layout_below="@+id/set_bt"
         android:layout_marginTop="20dp"
        android:id="@+id/test_et"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:gravity="top"
        android:background="#eee"
        android:text="@string/hello_world" />
</RelativeLayout>
