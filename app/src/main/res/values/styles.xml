<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="room_info_text_style">
        <item name="layout_constraintLeft_toLeftOf">@+id/room_name</item>
        <item name="layout_constraintTop_toBottomOf">@+id/room_name</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="room_info_bagtext_info">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#636363</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="bag_reset_title">
        <item name="android:textColor">#4D4D4D</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">20sp</item>
        <item name="background">@drawable/bag_reset_title_bg</item>
    </style>

    <style name="bag_info_item_text">
        <item name="android:textColor">#525252</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="bag_category_item_text">
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">88dp</item>
        <item name="android:layout_height">143dp</item>
        <item name="android:textSize">16dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:background">@drawable/bag_cate_dialog_item_bg</item>
    </style>
</resources>