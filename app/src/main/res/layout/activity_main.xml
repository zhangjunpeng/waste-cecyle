<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".main.MainActivity">

    <include
        android:id="@+id/title"
        layout="@layout/title_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="12dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextClock
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="28dp"
        android:layout_marginRight="51dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:format24Hour="yyyy/MM/dd hh:mm:ss"
        android:format12Hour="yyyy/MM/dd hh:mm:ss"
        />

    <LinearLayout
        android:id="@+id/scan_layout"
        android:layout_width="527dp"
        android:layout_height="192dp"
        android:layout_marginTop="10dp"
        android:background="@color/login_bt_bg"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="@+id/title"
        app:layout_constraintTop_toBottomOf="@+id/title"
        android:gravity="center_horizontal"
        >
        <ImageView
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:src="@drawable/scan_icon"
            android:layout_marginTop="26dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="24sp"
            android:text="扫码运送"
            android:layout_marginTop="19dp"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="拿起扫码枪，瞄准科室码，开始运送医废"
            android:layout_marginTop="5dp"
            android:textColor="@color/text_color"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/inout_layout"
        android:layout_width="wrap_content"
        android:layout_height="236dp"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/scan_layout"
        app:layout_constraintLeft_toLeftOf="@+id/scan_layout"
        >
        <LinearLayout
            android:layout_width="252dp"
            android:layout_height="match_parent"
            android:background="#00BAAD"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            >
            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/in_icon"
                android:layout_marginTop="53dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="24sp"
                android:text="医废入库"
                android:layout_marginTop="19dp"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="将医废打包放入箱中"
                android:layout_marginTop="5dp"
                android:textColor="@color/text_color"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="252dp"
            android:layout_height="match_parent"
            android:background="#43CF7C"
            android:layout_marginLeft="23dp"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            >
            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/in_icon"
                android:layout_marginTop="53dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="24sp"
                android:text="医废出库"
                android:layout_marginTop="19dp"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="将医废转移放入暂存间"
                android:layout_marginTop="5dp"
                android:textColor="@color/text_color"
                />

        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="153dp"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/inout_layout"
        app:layout_constraintLeft_toLeftOf="@+id/scan_layout"
        app:layout_constraintLeft_toRightOf="@+id/scan_layout"
        >
        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="182dp"
            android:background="#F2F2F2"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            >
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/unrecycle"
                android:layout_marginTop="24dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#0F0F0F"
                android:textSize="20sp"
                android:text="医废入库"
                android:layout_marginTop="19dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="182dp"
            android:background="#F2F2F2"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginLeft="23dp"
            >
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/recheck"
                android:layout_marginTop="24dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#0F0F0F"
                android:textSize="20sp"
                android:text="包裹调整"
                android:layout_marginTop="19dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="115dp"
            android:background="#F2F2F2"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginLeft="23dp"
            >
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/person"
                android:layout_marginTop="24dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#0F0F0F"
                android:textSize="13sp"
                android:text="个人中心\n历史记录"
                android:layout_marginTop="19dp"
                />

        </LinearLayout>

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="618dp"
        android:layout_height="190dp"
        android:layout_marginLeft="25dp"
        app:layout_constraintLeft_toRightOf="@+id/scan_layout"
        app:layout_constraintTop_toTopOf="@+id/scan_layout"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@drawable/main_border"
        xmlns:android="http://schemas.android.com/apk/res/android">
        <TextView
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:text="当前运送车"
            />
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginLeft="60dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#027D82"
                android:textStyle="bold"
                android:textSize="36sp"
                android:text="569,44kg"
                android:layout_marginBottom="19dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#525252"
                android:textSize="16sp"
                android:text="总重量"
                android:layout_marginBottom="19dp"

                />
        </LinearLayout>
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginRight="140dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#027D82"
                android:textStyle="bold"
                android:textSize="36sp"
                android:text="64包"
                android:layout_marginBottom="19dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#525252"
                android:textSize="16sp"
                android:text="数量"
                android:layout_marginBottom="19dp"

                />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="618dp"
        android:layout_height="426dp"
        app:layout_constraintTop_toBottomOf="@+id/scan_layout"
        app:layout_constraintLeft_toRightOf="@+id/scan_layout"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="23dp"
        android:background="@drawable/main_border"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:text="当前运送车详情"
            />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyler_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="19dp"
            />
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>