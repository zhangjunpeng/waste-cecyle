<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="horizontal"
    >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:gravity="center">

        <ImageView
            android:id="@+id/icon_item_bag_info"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:background="@drawable/red_radius"
            android:src="@drawable/infected"
            android:visibility="gone"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center">
        <TextView
            android:id="@+id/cate_item_bag_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="医废分类"
            android:textSize="18sp"
            android:textColor="#525252"
            android:textStyle="bold"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center">
        <TextView
            android:id="@+id/batch_num_item_bag_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="追溯编号"
            android:textSize="18sp"
            android:textColor="#525252"
            android:textStyle="bold"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center">
        <TextView
            android:id="@+id/room_item_bag_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="产生科室"
            android:textSize="18sp"
            android:textColor="#525252"
            android:textStyle="bold"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center">
        <TextView
            android:id="@+id/nurse_item_bag_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="交接护士"
            android:textSize="18sp"
            android:textColor="#525252"
            android:textStyle="bold"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center">
        <TextView
            android:id="@+id/weight_item_bag_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="重量"
            android:textSize="18sp"
            android:textColor="#525252"
            android:textStyle="bold"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center">
        <TextView
            android:id="@+id/time_item_bag_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="时间"
            android:textSize="18sp"
            android:textColor="#525252"
            android:textStyle="bold"
            />
    </LinearLayout>
</LinearLayout>