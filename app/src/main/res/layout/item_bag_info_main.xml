<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="horizontal"
    >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.7"
        android:gravity="center">

        <ImageView
            android:id="@+id/icon_item_bag_info"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:background="@drawable/red_radius"
            android:src="@drawable/infected"
            android:visibility="gone"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center">
        <TextView
            android:id="@+id/cate_item_bag_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="医废分类"
            android:textSize="18sp"
            android:textColor="#525252"
            android:textStyle="bold"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center">

        <TextView
            android:id="@+id/weight_num_item_bag_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="称重数量"
            android:textColor="#525252"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>




    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center">
        <TextView
            android:id="@+id/weight_item_bag_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="重量"
            android:textSize="18sp"
            android:textColor="#525252"
            android:textStyle="bold"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center">
        <TextView
            android:id="@+id/num_item_bag_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已入库"
            android:textSize="18sp"
            android:textColor="#525252"
            android:textStyle="bold"
            />
    </LinearLayout>
</LinearLayout>