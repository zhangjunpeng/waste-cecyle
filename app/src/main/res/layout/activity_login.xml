<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextClock
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:layout_marginRight="51dp"
        android:format12Hour="yyyy/MM/dd hh:mm:ss"
        android:format24Hour="yyyy/MM/dd hh:mm:ss"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true" />

    <!-- 恩语logo.png -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal|top"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="108dp"
            android:layout_height="20dp"
            android:layout_marginTop="85dp"
            android:src="@drawable/logo" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="智慧医废追溯系统"
            android:textColor="@color/black"
            android:textSize="36sp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="84dp"
            android:text="账户密码/扫码登录"
            android:textColor="@color/loginclolor"
            android:textSize="16sp" />

        <View
            android:layout_width="142dp"
            android:layout_height="2dp"
            android:layout_gravity="left"
            android:layout_marginTop="8dp"
            android:background="@color/loginclolor" />

        <LinearLayout
            android:layout_width="443dp"
            android:layout_height="48dp"
            android:layout_marginTop="13dp"
            android:background="@drawable/login_edit_bg"
            android:gravity="center_vertical"
            android:focusedByDefault="true"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:layout_marginLeft="14dp"
                android:src="@drawable/accont_icon" />

            <EditText
                android:id="@+id/edit_acc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:background="@color/white"
                android:layout_marginRight="14dp"
                android:selectAllOnFocus="true"
                android:maxLines="1"
                android:text="18336317096"
                />
        </LinearLayout>


        <LinearLayout
            android:layout_width="443dp"
            android:layout_height="48dp"
            android:layout_marginTop="29dp"
            android:gravity="center_vertical"
            android:background="@drawable/login_edit_bg"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:layout_marginLeft="14dp"
                android:src="@drawable/passwd_icon" />

            <EditText
                android:id="@+id/edit_pw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:background="@color/white"
                android:selectAllOnFocus="true"
                android:layout_marginRight="14dp"
                android:inputType="textPassword"
                android:maxLines="1"
                android:text="123456"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/login"
            android:layout_width="443dp"
            android:layout_height="48dp"
            android:layout_marginTop="42dp"
            android:background="@color/login_bt_bg"
            android:gravity="center"
            android:text="登录"
            android:textColor="@color/white"
            android:textSize="16sp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:text="Copyright@2022 郑州恩语电子科技有限公司出品" />

    </LinearLayout>


</RelativeLayout>