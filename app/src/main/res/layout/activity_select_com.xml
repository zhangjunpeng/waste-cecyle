<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".outstock.SelectComActivity">

    <include
        android:id="@+id/title"
        layout="@layout/title_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="59dp"
        android:layout_marginTop="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextClock
        android:id="@+id/textclock_bag_pack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:layout_marginRight="51dp"
        android:format12Hour="yyyy/MM/dd hh:mm:ss"
        android:format24Hour="yyyy/MM/dd hh:mm:ss"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="选择公司"
        android:textColor="@color/black"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintRight_toRightOf="@+id/textclock_bag_pack"
        app:layout_constraintTop_toBottomOf="@+id/textclock_bag_pack" />

    <TextView
        android:id="@+id/name_select_com"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:layout_marginLeft="71dp"
        android:layout_marginTop="154dp"
        android:layout_marginRight="53dp"
        android:background="@drawable/green_radius"
        android:gravity="center"
        android:text="选择公司转运人"
        android:textColor="@color/white"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recy_select_com"
        android:layout_width="946dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="156dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="3dp"
        app:layout_constraintTop_toBottomOf="@+id/name_select_com" />

    <TextView
        android:id="@+id/back_index"
        android:layout_width="260dp"
        android:layout_height="76dp"
        android:text="返回首页"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginRight="53dp"
        android:layout_marginBottom="47dp"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:gravity="center"
        android:background="@drawable/red_radius"
        />
</androidx.constraintlayout.widget.ConstraintLayout>